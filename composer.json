{
    "name": "jds-ventures/lumen-v7-laravel-helpers",
    "description": "Adds a popular set of Laravel helper functions into lumen v7.X",
    "homepage": "https://github.com/jds-ventures/lumen-v7-laravel-helpers",
    "keywords": [
        "template",
        "composer",
        "package",
        "skeleton",
        "boilerplate",
        "composer template",
        "package template",
        "composer package template"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jack Salvona",
            "email": "jack@jds.ventures"
        },
        {
            "name": "Jack <JDS Ventures> Salvona",
            "homepage": "https://jds.ventures",
            "email": "jack@jds.ventures",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "http://github.com/GinoPane/composer-package-template",
        "docs": "https://github.com/GinoPane/composer-package-template/blob/master/README.md",
        "issues": "https://github.com/GinoPane/composer-package-template/issues"
    },
    "type": "project",
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpmd/phpmd" : "^2.6",
        "phpdocumentor/phpdocumentor" : "^2.0"
    },
    "autoload": {
        "psr-4": {},
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "psr2check": [
            "@php vendor/bin/phpcs --standard=PSR2 src/"
        ],
        "psr2autofix": [
            "@php vendor/bin/phpcbf --standard=PSR2 src/"
        ],
        "docs": [
            "@php vendor/bin/phpdoc -d \"src\" -t \"docs\""
        ]
    }
}
